@{
    ViewData["Title"] = "Under the surface. Above the noise.";
}


<div>
    <!-- Main -->
    <section id="main">
        <div id="main-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active">
                    <img class="d-block w-100" src="~/images/blog-1.jpg" alt="First slide">
                </div>
                <div class="item">
                    <img class="d-block w-100" src="~/images/pb7.jpg" alt="Second slide">
                </div>
                <div class="item">
                    <img class="d-block w-100" src="~/images/scotland.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control left" href="#main-carousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control right" href="#main-carousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>


    <section id="blog" data-bind="foreach: postsPreview" class="tiles flex-container flex-spacing">
        <article>
            <span class="image">
                <img data-bind="attr: {src: imageUrl}" alt="IMAGE" class="content-image">
            </span>
            <a data-bind="attr: {href: postUrl}">
                <h3 data-bind="text: title"></h3>
                <div class="content">
                    <p data-bind="subtitle"></p>
                </div>
            </a>
            <span class="tile-label sm-text">
                <span data-bind="text: publishedDate"></span> | <span data-bind="text: category"></span>
            </span>
        </article>
    </section>

    <section id="articles">
        <div data-bind="foreach: posts" class="col-sm-8">
            <article class="article-vertical">
                <span class="preview-post-image-md">
                    <img data-bind="attr: {src: imageUrl}" alt="IMAGE" class="content-image">
                </span>
                <h1 class="preview-post-title centered-text">
                    <a data-bind="attr: {href: postUrl}, text: title"></a>
                </h1>
                <div class="separated-list-item centered-text">
                    <span class="preview-post-category">
                        <a onclick="navigateToCategory(this)" data-bind="text: category"></a>
                    </span>
                    |<span class="preview-post-date" data-bind="text: publishedDate"></span>
                </div>
                <div>
                    <p data-bind="html: content" class="preview-post-content"></p>
                </div>
                <div class="preview-post-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <a class="border-link" data-bind="attr: {href: postUrl}">
                                Read More
                            </a>
                        </div>
                    </div>
                </div>
            </article>
        </div>
        <div class="col-sm-4">
            <div class="side-container">
                <div class="coloured-panel">
                    <h3>Categories</h3>
                    <ul data-bind="foreach: categories">
                        <li class="separated-list-item">
                            <a data-bind="text: $data" onclick="navigateToCategory(this)"></a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="side-container">
                <h3 class="separated-list-item">About Author</h3>                
                <div>
                    <div>
                        <img id="author-img" class="content-image" src="https://res.cloudinary.com/schmopera/image/upload/v1545409169/media/webhook-uploads/1450541021128/Jennifer-Nichols.jpg.jpg">
                    </div>
                    <div class="author-description">
                        <p>
                            Jennifer Nichols is a choreographer, professional dancer, and founder/director of the elite ballet fitness program, The Extension Method™, and Co-Owner of its affiliate dance retreat company, Extend Retreats.
                        <p>
                        <a class="border-link">Read More</a>
                    </div>
                    <div class="author-social">
                        <a href="https://www.facebook.com/jennifer.nichols.927543" target="_blank" title="Facebook"><span class="fa fa-facebook"></span></a>
                        <a href="https://www.instagram.com/jennifernichols_dance/" target="_blank" title="Instagram"><span class="fa fa-instagram"></span></a>
                        <a href="https://www.extensionmethod.com/" target="_blank" title="Web"><span class="fa fa-globe"></span></a>
                        <a href="https://www.youtube.com/channel/UCv5zaYkxa7SCXepCGnIWmjQ" target="_blank" title="YouTube"><span class="fa fa-youtube"></span></a>
                    </div><!-- .author-social -->
                </div><!-- .author-bio-wrap -->
            </div>
        </div>
    </section>
</div>

