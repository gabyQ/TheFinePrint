@{
    ViewData["Title"] = "Under the surface. Above the noise.";
}


<div id="wrapper">

    <!-- Main -->
    <section id="main">
        <div id="main-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active">
                    <img class="d-block w-100" src="~/images/blog-1.jpg" alt="First slide">
                </div>
                <div class="item">
                    <img class="d-block w-100" src="~/images/pb7.jpg" alt="Second slide">
                </div>
                <div class="item">
                    <img class="d-block w-100" src="~/images/scotland.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control left" href="#main-carousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control right" href="#main-carousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>


    <section id="blog" class="row tiles" data-bind="foreach: postsPreview">
        <article class="col-sm-4">
            <span class="image">
                <img data-bind="attr: {src: imageUrl}" alt="IMAGE" class="content-image">
            </span>
            <a data-bind="attr: {href: postUrl}">
                <h2 data-bind="text: title"></h2>
                <div class="content">
                    <p data-bind="subtitle"></p>
                </div>
            </a>
            <span class="tile-label sm-text">
                <span data-bind="text: publishedDate"></span> | <span data-bind="text: category"></span>
            </span>
        </article>

    </section>

    <section id="articles" class="row">
        <div data-bind="foreach: posts" class="col-sm-8">
            <article class="article-vertical">
                <span class="preview-post-image-md">
                    <img data-bind="attr: {src: imageUrl}" alt="IMAGE" class="content-image">
                </span>
                <h1 class="preview-post-title">
                    <a data-bind="attr: {href: postUrl}, text: title"></a>
                </h1>
                <div class="preview-post-header">
                    <span class="preview-post-category">
                        <a href="attr: {href: categoryUrl}, text: category"></a>
                    </span>
                    <span class="preview-post-date" data-bind="text: publishedDate"></span>
                </div>
                <div class="preview-post-content">
                    <p data-bind="html: contentPreview"></p>
                </div>
                <div class="preview-post-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <a class="post-read-more d-block" href="attr: {href: postUrl}">
                                Read More
                                <i class="far fa-long-arrow-right" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </article>
        </div>
        <div class="col-sm-4">
            <div class="side-container">
                <div class="coloured-panel">
                    <h3>Categories</h3>
                    <ul data-bind="foreach: categories">
                        <li data-bind="text: $data" class="separated-list-item"></li>
                    </ul>
                </div>
            </div>

            <div class="side-container">
                <h3>About Author</h3>                
                <div>
                    <div>
                        <img class="content-image" src="https://res.cloudinary.com/schmopera/image/upload/v1545409169/media/webhook-uploads/1450541021128/Jennifer-Nichols.jpg.jpg">
                    </div>
                    <div class="author-description">
                        <p>Jennifer Nichols is awesome!</p>
                    </div>
                    <div class="author-social">
                        <span class="social-icon-wrap"><a href="https://www.facebook.com/jennifer.nichols.927543" target="_blank" title="Facebook"><i class="fa-facebook"></i></a></span>
                        <span class="social-icon-wrap"><a href="https://www.instagram.com/jennifernichols_dance/" target="_blank" title="Instagram"><i class="fa-instagram"></i></a></span>
                        <span class="social-icon-wrap"><a href="https://www.extensionmethod.com/" target="_blank" title="Web"><i class="fa-browser"></i></a></span>
                        <span class="social-icon-wrap"><a href="http://twitter.com/codevibrant" target="_blank" title="Twitter"><i class="fa-twitter"></i></a></span>
                    </div><!-- .author-social -->
                </div><!-- .author-bio-wrap -->
            </div>
        </div>
    </section>
</div>

<script src="~/js/home/home.js"></script>