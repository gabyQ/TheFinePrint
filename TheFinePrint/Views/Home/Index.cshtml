@{
    ViewData["Title"] = "Under the surface. Above the noise.";
}

<!-- Main -->
<section id="main">
    <div id="main-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="item active">
                <img class="d-block w-100" src="~/images/beautiful-desktop-wallpaper-frost-2088238.jpg" alt="First slide">
            </div>
            <div class="item">
                <img class="d-block w-100" src="~/images/berries-bowl-bowl-of-fruit-1145977.jpg" alt="Second slide">
            </div>
            <div class="item">
                <img class="d-block w-100" src="~/images/background-citrus-close-988861.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control left" href="#main-carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control right" href="#main-carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>

<section id="articles">
    <div class="col-sm-9">
        <header class="major">
            <h2>Latest Posts</h2>
        </header>
        <div data-bind="foreach: posts" class="posts">
            <article class="article-vertical">
                <a href="#" class="image"><img data-bind="attr: {src: imageUrl}" alt="IMAGE" class="content-image"></a>
                <span class="tile-label sm-text">
                    <span data-bind="text: publishedDate"></span> |
                    <span data-bind="text: category"></span>
                </span>
                <h3><a data-bind="attr: {href: postUrl}, text: title"></a></h3>
                <p data-bind="html: content" class="preview-post-content"></p>
                <ul class="actions">
                    <li><a data-bind="attr: {href: postUrl}" class="button">Read More</a></li>
                </ul>
            </article>
        </div>
    </div>

    <div class="col-sm-3">
        <section class="coloured-panel">
            <header class="major">
                <h2>Categories</h2>
            </header>
                <ul data-bind="foreach: categories">
                    <li class="separated-list-item">
                        <a data-bind="text: $data" onclick="navigateToCategory(this)"></a>
                    </li>
                </ul>

            @*<div class="mini-posts" data-bind="foreach: categories">
                    <article>
                        <a onclick="navigateToCategory(this)" class="image">
                            <img src="~/images/scotland.jpg" alt="" />
                        </a>
                        <p data-bind="text: $data"></p>
                    </article>
                </div>*@
        </section>
    </div>
    <div class="side-container">
        <h3 class="separated-list-item">About Author</h3>
        <div>
            <div>
                <img id="author-img" class="content-image" src="https://res.cloudinary.com/schmopera/image/upload/v1545409169/media/webhook-uploads/1450541021128/Jennifer-Nichols.jpg.jpg">
            </div>
            <div class="author-description">
                <p>
                    Jennifer Nichols is a choreographer, professional dancer, and founder/director of the elite ballet fitness program, The Extension Method™, and Co-Owner of its affiliate dance retreat company, Extend Retreats.
                <p>
                    <a class="border-link">Read More</a>
            </div>
            <div class="author-social">
                <a href="https://www.facebook.com/jennifer.nichols.927543" target="_blank" title="Facebook"><span class="fa fa-facebook"></span></a>
                <a href="https://www.instagram.com/jennifernichols_dance/" target="_blank" title="Instagram"><span class="fa fa-instagram"></span></a>
                <a href="https://www.extensionmethod.com/" target="_blank" title="Web"><span class="fa fa-globe"></span></a>
                <a href="https://www.youtube.com/channel/UCv5zaYkxa7SCXepCGnIWmjQ" target="_blank" title="YouTube"><span class="fa fa-youtube"></span></a>
            </div><!-- .author-social -->
        </div><!-- .author-bio-wrap -->
    </div>
    </div>
</section>
